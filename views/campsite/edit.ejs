<%-include("../partials/header") %>

    <div class="row">
        <h1 class="text-center" style="text-transform: uppercase;">Edit <%= camp.name  %> </h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campsites/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= camp.price %>"
                        min="100.0" step="1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="camp[description]"><%= camp.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a class="btn btn-default" href="/campsites/<%= camp.id %> ">Go Back</a>
        </div>

    </div>



<%-include("../partials/footer") %>